rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir acceso completo para desarrollo y testing
    // NOTA: En producción, estas reglas deben ser más restrictivas
    
    // Colección de usuarios - acceso completo
    match /users/{userId} {
      allow read, write: if true;
    }

    // Colección de giftcards - acceso completo
    match /giftcards/{giftcardId} {
      allow read, write: if true;
    }

    // Colección de actividades - acceso completo
    match /activities/{activityId} {
      allow read, write: if true;
    }

    // Colección de mensajes de contacto - acceso completo
    match /contactMessages/{messageId} {
      allow read, write: if true;
    }

    // Configuración del sitio - acceso completo
    match /settings/{settingId} {
      allow read, write: if true;
    }

    // Términos y condiciones - acceso completo
    match /terms/{termId} {
      allow read, write: if true;
    }

    // Documentos de inicialización - acceso completo
    match /{collection}/_init {
      allow read, write: if true;
    }

    // Documento de prueba de conexión - acceso completo
    match /test/connection {
      allow read, write: if true;
    }
    
    // Permitir acceso a cualquier documento para desarrollo
    match /{document=**} {
      allow read, write: if true;
    }
  }
}