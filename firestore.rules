rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función para verificar si el usuario es superadmin
    function isSuperAdmin() {
      return isAuthenticated() && 
             request.auth.uid == 'demian-admin-uid';
    }
    
    // Función para verificar si el usuario es admin o superadmin
    function isAdmin() {
      return isAuthenticated();
    }

    // Colección de usuarios - solo usuarios autenticados pueden leer/escribir
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }

    // Colección de giftcards - solo usuarios autenticados pueden leer/escribir
    match /giftcards/{giftcardId} {
      allow read, write: if isAuthenticated();
      // Permitir lectura pública para consultas específicas por número
      allow read: if resource.data.number != null;
    }

    // Colección de actividades - solo usuarios autenticados pueden leer/escribir
    match /activities/{activityId} {
      allow read, write: if isAuthenticated();
    }

    // Colección de mensajes de contacto - usuarios autenticados pueden leer/escribir, público puede crear
    match /contactMessages/{messageId} {
      allow read, write: if isAuthenticated();
      allow create: if true; // Permitir creación pública para formulario de contacto
    }

    // Configuración del sitio - lectura pública, escritura solo para autenticados
    match /settings/{settingId} {
      allow read: if true; // Lectura pública para la página principal
      allow write: if isAuthenticated();
    }

    // Términos y condiciones - lectura pública, escritura solo para autenticados
    match /terms/{termId} {
      allow read: if true; // Lectura pública para la consulta de giftcards
      allow write: if isAuthenticated();
    }

    // Documento de inicialización - acceso completo para setup inicial
    match /{collection}/_init {
      allow read, write: if true;
    }

    // Documento de prueba de conexión - acceso completo
    match /test/connection {
      allow read, write: if true;
    }
  }
}