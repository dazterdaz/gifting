rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para usuarios autenticados
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Reglas para superadmin
    function isSuperAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Reglas para admin o superadmin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }

    // Colección de usuarios - acceso más permisivo para inicialización
    match /users/{userId} {
      // Permitir lectura y escritura para inicialización del sistema
      allow read, write: if true;
    }

    // Colección de giftcards - acceso completo para desarrollo
    match /giftcards/{giftcardId} {
      allow read, write: if true;
    }

    // Colección de actividades - acceso completo para desarrollo
    match /activities/{activityId} {
      allow read, write: if true;
    }

    // Colección de mensajes de contacto - acceso completo
    match /contactMessages/{messageId} {
      allow read, write: if true;
    }

    // Configuración del sitio - acceso completo
    match /settings/{settingId} {
      allow read, write: if true;
    }

    // Términos y condiciones - acceso completo
    match /terms/{termId} {
      allow read, write: if true;
    }

    // Documento de inicialización - acceso completo
    match /{collection}/_init {
      allow read, write: if true;
    }

    // Documento de prueba de conexión
    match /test/connection {
      allow read, write: if true;
    }
    
    // Regla general para desarrollo - REMOVER EN PRODUCCIÓN
    match /{document=**} {
      allow read, write: if true;
    }
  }
}