# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================

# Tipo de base de datos: 'mysql' o 'postgresql'
VITE_DB_TYPE=mysql

# Configuración de conexión
VITE_DB_HOST=localhost
VITE_DB_PORT=3306
VITE_DB_NAME=daz_giftcard_register
VITE_DB_USER=tu_usuario
VITE_DB_PASSWORD=tu_password

# SSL (opcional, para conexiones seguras)
VITE_DB_SSL=false

# =====================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =====================================================

# Entorno de la aplicación
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# URL base de la aplicación (para producción)
VITE_APP_URL=https://tu-dominio.com

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Clave secreta para JWT (generar una clave segura)
VITE_JWT_SECRET=tu_clave_secreta_muy_larga_y_segura

# Salt para hash de contraseñas
VITE_BCRYPT_ROUNDS=10